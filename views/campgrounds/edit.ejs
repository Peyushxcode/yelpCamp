<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST"  novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="from-label" for="title">Title : </label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value=" <%= campground.title%>  "  required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label class="from-label"  for="location">Location : </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value=" <%= campground.location%>  " required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                
                <div class="mb-3">
                    <label class="from-label"  for="price">Campground Price : </label>
                    <div class="input-group ">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" id="price" class="form-control" name="campground[price]" value=" <%= campground.price%>  " placeholder="0.0" aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                      </div>
                </div>
                
                <div class="mb-3">
                    <label class="from-label"  for="description">Description : </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required><%=campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="input-group mb-3 custom-file">
                    <input type="file" class="form-control" id="image" name="image" placeholder="Add more Images" multiple>
                    <label class="input-group-text custom-file-label" for="image">Browse</label>
                  </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img,i){ %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id=" img-<%=i %>">
                        </div>
                        <label for=" img-<%=i %>">Delete ?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update campground !</button>
                </div>
            </form>
            <a href="/campgrounds">Back to All campgrounds !</a>
        </div>
    </div>